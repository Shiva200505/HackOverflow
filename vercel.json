{
  "buildCommand": "prisma generate && next build",
  "framework": "nextjs",
  "installCommand": "npm install",
  "env": {
    "DATABASE_URL": {
      "description": "PostgreSQL connection string with PgBouncer support",
      "required": true
    },
    "DIRECT_URL": {
      "description": "Direct PostgreSQL connection string (without PgBouncer)",
      "required": true
    },
    "NEXTAUTH_SECRET": {
      "description": "Secret for NextAuth.js JWT encryption",
      "required": true
    },
    "NEXT_PUBLIC_SUPABASE_URL": {
      "description": "Public Supabase project URL",
      "required": true
    },
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": {
      "description": "Public Supabase anonymous key",
      "required": true
    },
    "GROQ_API_KEY": {
      "description": "Groq API key for AI voice processing (optional but recommended)",
      "required": false
    }
  }
}
